{{!-- ==================== VANILLA JAVASCRIPT UNTUK INTERAKSI ==================== --}}
<script>
/**
 * Script untuk interaksi halaman home/landing page
 * - Smooth scroll untuk anchor links
 * - Hover effects pada tombol
 * - Optional: Analytics tracking
 */

document.addEventListener('DOMContentLoaded', function() {
  /**
   * Smooth scroll untuk navigasi ke section dengan anchor
   * Contoh: <a href="#fitur-utama"> akan scroll ke section dengan id="fitur-utama"
   */
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
      const hrefValue = this.getAttribute('href');
      
      // Abaikan jika hanya "#" tanpa target
      if (hrefValue === '#') return;
      
      const targetElement = document.querySelector(hrefValue);
      if (targetElement) {
        e.preventDefault();
        targetElement.scrollIntoView({ behavior: 'smooth' });
      }
    });
  });

  /**
   * Optional: Tambahkan class 'active' pada tombol ketika diklik
   * Untuk memberikan visual feedback kepada user
   */
  document.querySelectorAll('.tombol-utama, .tombol-sekunder, .tombol-cta-besar').forEach(button => {
    button.addEventListener('click', function() {
      // Hanya berikan feedback jika bukan link eksternal/navigasi
      this.style.opacity = '0.8';
      setTimeout(() => {
        this.style.opacity = '1';
      }, 200);
    });
  });
});
</script>
