<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - NusaAttend</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/png" href="/img/Logo%20NusaAttend%20Tanpa%20Tulisan.png">
</head>
<body class="login-page" style="display: flex; flex-direction: column; min-height: 100vh; margin: 0; padding: 0;">
    {{!-- ==================== TOMBOL NAVIGASI KEMBALI KE BERANDA ==================== --}}
    {{!-- Tombol ditempatkan di pojok kiri atas dengan positioning absolute --}}
    <a href="/" class="tombol-kembali-beranda">
        <i class="fas fa-arrow-left"></i>
        <span class="teks-tombol-kembali">Beranda</span>
    </a>

    <div class="login-background">
        <div class="login-wrapper">
            <div class="login-card">
                <!-- ==================== HEADER SECTION ==================== -->
                <div class="login-header">
                    <img src="/img/Logo NusaAttend.png" alt="NusaAttend Logo" class="header-logo">
                    <div class="header-text">
                        <p class="app-subtitle">Portal Administrasi Kehadiran Tim</p>
                    </div>
                </div>

                <!-- ==================== FORM LOGIN ==================== -->
                <form class="login-form" id="loginForm" method="POST">
                    <!-- Alert untuk error -->
                    {{#if error}}
                    <div class="alert alert-error">
                        <span class="alert-icon">⚠️</span>
                        <span class="alert-message">{{error}}</span>
                    </div>
                    {{/if}}

                    <!-- Alert untuk success -->
                    {{#if success}}
                    <div class="alert alert-success">
                        <span class="alert-icon">✓</span>
                        <span class="alert-message">{{success}}</span>
                    </div>
                    {{/if}}

                    <!-- Input Email -->
                    <div class="form-group">
                        <label class="form-label" for="email">Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            class="form-input" 
                            placeholder="email@perusahaan.com"
                            value="{{email}}"
                            required
                        />
                    </div>

                    <!-- Input Password -->
                    <div class="form-group">
                        <label class="form-label" for="password">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="form-input" 
                            placeholder="••••••••"
                            required
                        />
                    </div>

                    <!-- Tombol Login -->
                    <button type="submit" class="login-button">
                        Masuk
                    </button>

                    <!-- Link Lupa Password -->
                    <div class="forgot-password-container">
                        <a href="/forgot-password" class="forgot-password-link">Lupa Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {{!-- ==================== FOOTER GLOBAL ==================== --}}
    {{> footer}}

    <script src="/js/app.js"></script>
    <script>
        /**
         * Handle form login menggunakan JavaScript
         * Mencegah default submit dan mengirim data ke API via fetch
         */
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            try {
                // Kirim request POST ke endpoint login API
                const response = await fetch('/api/auth/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email, password })
                });
                
                const data = await response.json();
                
                // Jika login berhasil, redirect ke dashboard
                if (data.success) {
                    window.location.href = '/dashboard';
                } else {
                    // Tampilkan pesan error jika login gagal
                    alert('Login gagal: ' + (data.error || 'Terjadi kesalahan'));
                }
            } catch (error) {
                console.error('Kesalahan login:', error);
                alert('Terjadi kesalahan saat login');
            }
        });
    </script>
</body>
</html>
