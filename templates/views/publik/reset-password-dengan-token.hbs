<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - NusaAttend</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(148.426deg, #eef6ff 0%, #e0e7ff 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .container-reset {
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            max-width: 500px;
            width: 100%;
            padding: 40px;
            animation: slideUp 0.5s ease-out;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .header-reset {
            text-align: center;
            margin-bottom: 30px;
        }

        .header-reset h1 {
            font-size: 28px;
            color: #333;
            margin-bottom: 8px;
            font-weight: 700;
        }

        .email-display {
            background: #f0f4ff;
            border: 1px solid #e0e8ff;
            border-radius: 8px;
            padding: 12px 16px;
            font-size: 13px;
            color: #666;
            margin-bottom: 20px;
            word-break: break-all;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        .password-input-wrapper {
            position: relative;
        }

        .form-input {
            width: 100%;
            padding: 12px 14px;
            padding-right: 40px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s ease;
            font-family: inherit;
        }

        .form-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .form-input::placeholder {
            color: #999;
        }

        .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #999;
            font-size: 16px;
            padding: 4px 8px;
            transition: color 0.3s ease;
        }

        .toggle-password:hover {
            color: #667eea;
        }

        .password-strength {
            margin-top: 12px;
        }

        .strength-bar {
            height: 6px;
            background: #f0f0f0;
            border-radius: 3px;
            overflow: hidden;
            margin-bottom: 8px;
        }

        .strength-fill {
            height: 100%;
            width: 0%;
            background: #ef4444;
            border-radius: 3px;
            transition: all 0.3s ease;
        }

        .strength-text {
            font-size: 12px;
            font-weight: 600;
            color: #666;
        }

        .strength-text.lemah { color: #ef4444; }
        .strength-text.sedang { color: #f59e0b; }
        .strength-text.kuat { color: #10b981; }
        .strength-text.sangat-kuat { color: #059669; }

        .requirements {
            background: #f9fafb;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 12px;
            margin-top: 12px;
            font-size: 13px;
        }

        .requirement-item {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 6px;
            color: #999;
            transition: color 0.3s ease;
        }

        .requirement-item:last-child {
            margin-bottom: 0;
        }

        .requirement-item.met {
            color: #10b981;
        }

        .requirement-icon {
            width: 16px;
            text-align: center;
            flex-shrink: 0;
        }

        .password-match {
            margin-top: 8px;
            font-size: 13px;
            font-weight: 600;
            display: none;
            align-items: center;
            gap: 6px;
        }

        .password-match.match {
            color: #10b981;
            display: flex;
        }

        .password-match.no-match {
            color: #ef4444;
            display: flex;
        }

        .alert {
            padding: 12px 14px;
            border-radius: 8px;
            margin-bottom: 16px;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 10px;
            animation: slideDown 0.3s ease;
            display: none;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-error {
            background: #fee;
            border: 1px solid #fcc;
            color: #c33;
        }

        .alert-success {
            background: #efe;
            border: 1px solid #cfc;
            color: #3c3;
        }

        .alert-icon {
            font-size: 16px;
            flex-shrink: 0;
        }

        .button-submit {
            width: 100%;
            padding: 12px 16px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            margin-top: 20px;
        }

        .button-submit:hover:not(:disabled) {
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
            transform: translateY(-2px);
        }

        .button-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .spinner {
            display: inline-block;
            width: 14px;
            height: 14px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .security-warning {
            background: #fffbec;
            border: 1px solid #ffd699;
            border-radius: 8px;
            padding: 12px 14px;
            margin-top: 20px;
            font-size: 13px;
            color: #8b6914;
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }

        .security-warning i {
            font-size: 16px;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .link-kembali {
            text-align: center;
            margin-top: 24px;
            display: flex;
            justify-content: center;
        }

        .link-kembali a {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 11px 20px;
            background: white;
            border: 2px solid #e0e8ff;
            color: #667eea;
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .link-kembali a:hover {
            background: #f0f4ff;
            border-color: #667eea;
            color: #764ba2;
            transform: translateX(-3px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
        }

        .link-kembali a:active {
            transform: translateX(-1px);
        }

        .link-kembali i {
            font-size: 16px;
            transition: transform 0.3s ease;
        }

        .link-kembali a:hover i {
            transform: translateX(-2px);
        }

        @media (max-width: 600px) {
            .container-reset {
                padding: 24px;
            }

            .header-reset h1 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="container-reset">
        <!-- Header -->
        <div class="header-reset">
            <h1>Reset Password</h1>
        </div>

        <!-- Email Display -->
        <div class="email-display">
            <strong>Email:</strong> {{email}}
        </div>

        <!-- Alert Area -->
        <div id="alertArea" class="alert"></div>

        <!-- Form -->
        <form id="formResetPassword" class="form-reset">
            <!-- Hidden Token -->
            <input type="hidden" id="tokenReset" value="{{token_reset}}" />

            <!-- Password Input -->
            <div class="form-group">
                <label class="form-label" for="passwordInput">Password Baru</label>
                <div class="password-input-wrapper">
                    <input
                        type="password"
                        id="passwordInput"
                        name="password"
                        class="form-input"
                        placeholder="Masukkan password baru"
                        required
                    />
                    <button type="button" class="toggle-password" id="togglePassword1">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>

                <!-- Password Strength -->
                <div class="password-strength">
                    <div class="strength-bar">
                        <div class="strength-fill" id="strengthFill"></div>
                    </div>
                    <div class="strength-text" id="strengthText">-</div>
                </div>

                <!-- Requirements -->
                <div class="requirements">
                    <div class="requirement-item" id="req1">
                        <span class="requirement-icon">✗</span>
                        <span>Minimal 6 karakter</span>
                    </div>
                    <div class="requirement-item" id="req2">
                        <span class="requirement-icon">✗</span>
                        <span>Minimal 1 huruf besar (A-Z)</span>
                    </div>
                    <div class="requirement-item" id="req3">
                        <span class="requirement-icon">✗</span>
                        <span>Minimal 1 huruf kecil (a-z)</span>
                    </div>
                    <div class="requirement-item" id="req4">
                        <span class="requirement-icon">✗</span>
                        <span>Minimal 1 angka (0-9)</span>
                    </div>
                </div>
            </div>

            <!-- Confirm Password Input -->
            <div class="form-group">
                <label class="form-label" for="passwordConfirm">Konfirmasi Password</label>
                <div class="password-input-wrapper">
                    <input
                        type="password"
                        id="passwordConfirm"
                        name="password_confirm"
                        class="form-input"
                        placeholder="Ketik ulang password"
                        required
                    />
                    <button type="button" class="toggle-password" id="togglePassword2">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>

                <!-- Password Match Status -->
                <div class="password-match" id="passwordMatchStatus">
                    <span class="requirement-icon">✓</span>
                    <span>Password cocok</span>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="button-submit" id="buttonSubmit" disabled>
                <span id="textButton">Reset Password</span>
                <span id="spinnerButton" class="spinner" style="display: none;"></span>
            </button>
        </form>

        <!-- Security Warning -->
        <div class="security-warning">
            <i class="fas fa-shield-alt"></i>
            <span><strong>Keamanan:</strong> Link berlaku 30 menit dan dapat digunakan sekali saja. Jangan bagikan link ini kepada siapapun.</span>
        </div>

        <!-- Back Link -->
        <div class="link-kembali">
            <a href="/login">
                <i class="fas fa-arrow-left"></i>
                <span>Kembali ke Login</span>
            </a>
        </div>
    </div>

    <script>
        /**
         * ==================== FORM RESET PASSWORD HANDLER ====================
         * Menangani validasi password strength dan form submission
         */

        // ==================== DOM ELEMENTS ====================
        const formResetPassword = document.getElementById('formResetPassword');
        const passwordInput = document.getElementById('passwordInput');
        const passwordConfirm = document.getElementById('passwordConfirm');
        const tokenReset = document.getElementById('tokenReset');
        const buttonSubmit = document.getElementById('buttonSubmit');
        const textButton = document.getElementById('textButton');
        const spinnerButton = document.getElementById('spinnerButton');
        const alertArea = document.getElementById('alertArea');
        const strengthFill = document.getElementById('strengthFill');
        const strengthText = document.getElementById('strengthText');
        const passwordMatchStatus = document.getElementById('passwordMatchStatus');

        // ==================== PASSWORD STRENGTH CALCULATOR ====================
        /**
         * Hitung kekuatan password berdasarkan kriteria
         */
        function hitungKekuatanPassword(password) {
            let strength = 0;
            const requirements = {
                length: password.length >= 6,
                uppercase: /[A-Z]/.test(password),
                lowercase: /[a-z]/.test(password),
                number: /\d/.test(password)
            };

            // Update requirement indicators
            updateRequirementUI('req1', requirements.length);
            updateRequirementUI('req2', requirements.uppercase);
            updateRequirementUI('req3', requirements.lowercase);
            updateRequirementUI('req4', requirements.number);

            // Calculate strength score
            Object.values(requirements).forEach(met => {
                if (met) strength++;
            });

            // Update strength bar and text
            const strengthLevels = ['lemah', 'sedang', 'kuat', 'sangat-kuat'];
            const strengthPercent = (strength / 4) * 100;

            strengthFill.style.width = strengthPercent + '%';
            strengthFill.style.background = getStrengthColor(strength);

            if (strength === 0) {
                strengthText.textContent = '-';
                strengthText.className = 'strength-text';
            } else {
                strengthText.textContent = 'Kekuatan: ' + strengthLevels[strength - 1];
                strengthText.className = 'strength-text ' + strengthLevels[strength - 1];
            }

            return requirements;
        }

        /**
         * Get color berdasarkan strength level
         */
        function getStrengthColor(strength) {
            const colors = ['#ef4444', '#f59e0b', '#10b981', '#059669'];
            return colors[strength - 1] || '#ef4444';
        }

        /**
         * Update requirement UI indicator
         */
        function updateRequirementUI(id, isMet) {
            const elem = document.getElementById(id);
            if (isMet) {
                elem.classList.add('met');
                elem.querySelector('.requirement-icon').textContent = '✓';
            } else {
                elem.classList.remove('met');
                elem.querySelector('.requirement-icon').textContent = '✗';
            }
        }

        // ==================== PASSWORD MATCH CHECKER ====================
        /**
         * Cek apakah password cocok
         */
        function cekKecocokan() {
            if (passwordInput.value && passwordConfirm.value) {
                if (passwordInput.value === passwordConfirm.value) {
                    passwordMatchStatus.classList.add('match');
                    passwordMatchStatus.classList.remove('no-match');
                    return true;
                } else {
                    passwordMatchStatus.classList.add('no-match');
                    passwordMatchStatus.classList.remove('match');
                    return false;
                }
            } else {
                passwordMatchStatus.classList.remove('match', 'no-match');
                return false;
            }
        }

        // ==================== TOGGLE PASSWORD VISIBILITY ====================
        /**
         * Toggle show/hide password
         */
        function setupPasswordToggle(buttonId, inputId) {
            const button = document.getElementById(buttonId);
            const input = document.getElementById(inputId);

            button.addEventListener('click', (e) => {
                e.preventDefault();
                const isPassword = input.type === 'password';
                input.type = isPassword ? 'text' : 'password';
                button.querySelector('i').className = isPassword ? 'fas fa-eye-slash' : 'fas fa-eye';
            });
        }

        setupPasswordToggle('togglePassword1', 'passwordInput');
        setupPasswordToggle('togglePassword2', 'passwordConfirm');

        // ==================== EVENT LISTENERS ====================
        /**
         * Listen password input change untuk update strength
         */
        passwordInput.addEventListener('input', () => {
            const requirements = hitungKekuatanPassword(passwordInput.value);
            const isAllMet = Object.values(requirements).every(v => v);
            cekKecocokan();
            updateButtonState(isAllMet && cekKecocokan());
        });

        /**
         * Listen confirm password untuk check kecocokan
         */
        passwordConfirm.addEventListener('input', () => {
            const requirements = hitungKekuatanPassword(passwordInput.value);
            const isAllMet = Object.values(requirements).every(v => v);
            cekKecocokan();
            updateButtonState(isAllMet && cekKecocokan());
        });

        /**
         * Update button state - enable hanya jika semua requirement terpenuhi
         */
        function updateButtonState(isValid) {
            buttonSubmit.disabled = !isValid;
        }

        // ==================== FORM SUBMIT HANDLER ====================
        /**
         * Handle form submit
         */
        formResetPassword.addEventListener('submit', async (e) => {
            e.preventDefault();

            const password_baru = passwordInput.value;
            const password_konfirmasi = passwordConfirm.value;
            const token = tokenReset.value;

            // Validasi
            if (!password_baru || !password_konfirmasi) {
                tampilkanAlert('error', 'Semua field harus diisi');
                return;
            }

            if (password_baru !== password_konfirmasi) {
                tampilkanAlert('error', 'Password tidak cocok');
                return;
            }

            // Set loading state
            buttonSubmit.disabled = true;
            textButton.style.display = 'none';
            spinnerButton.style.display = 'inline-block';

            try {
                // Kirim request ke API
                const response = await fetch('/api/pemulihan/reset-password-dengan-token', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        token_reset: token,
                        password_baru: password_baru,
                        password_konfirmasi: password_konfirmasi
                    })
                });

                const data = await response.json();

                if (data.success) {
                    tampilkanAlert('success', '✓ ' + data.message);
                    formResetPassword.reset();

                    // Redirect ke login setelah 2 detik
                    setTimeout(() => {
                        window.location.href = '/login';
                    }, 2000);
                } else {
                    tampilkanAlert('error', data.message || 'Gagal reset password');
                    buttonSubmit.disabled = false;
                    textButton.style.display = 'inline';
                    spinnerButton.style.display = 'none';
                }
            } catch (error) {
                console.error('Error:', error);
                tampilkanAlert('error', 'Terjadi kesalahan. Silakan coba lagi');
                buttonSubmit.disabled = false;
                textButton.style.display = 'inline';
                spinnerButton.style.display = 'none';
            }
        });

        /**
         * Tampilkan alert message
         */
        function tampilkanAlert(type, message) {
            alertArea.innerHTML = `
                <span class="alert-icon">${type === 'success' ? '✓' : '⚠️'}</span>
                <span>${message}</span>
            `;
            alertArea.className = `alert alert-${type}`;
            alertArea.style.display = 'flex';
        }
    </script>
</body>
</html>
