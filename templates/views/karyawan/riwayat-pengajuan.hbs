{{!-- ==================== HALAMAN RIWAYAT PENGAJUAN (KARYAWAN) ==================== --}}
{{!-- 
    Halaman ini menampilkan daftar riwayat pengajuan surat izin yang telah diajukan oleh karyawan.
    Bersifat informasional dan arsip administratif - tidak ada aksi pengeditan atau pembatalan.
    Data ditampilkan dalam tabel dengan status visual yang jelas.
--}}

<div class="halaman-riwayat-pengajuan">
    {{!-- ==================== HEADER HALAMAN ==================== --}}
    <div class="kepala-halaman">
        <div class="info-kepala">
            {{!-- Judul halaman --}}
            <h1 class="judul-halaman">Riwayat Pengajuan</h1>
            {{!-- Deskripsi singkat tujuan halaman --}}
            <p class="deskripsi-halaman">Semua pengajuan surat izin yang pernah Anda ajukan</p>
        </div>
    </div>

    {{!-- ==================== KONTAINER TABEL PENGAJUAN ==================== --}}
    <div class="kontainer-tabel-pengajuan">
        {{!-- Header tabel dengan judul dan ikon --}}
        <div class="header-tabel-pengajuan">
            <div class="wrapper-judul-header">
                <i class="fas fa-list-ul ikon-header"></i>
                <h2 class="judul-tabel">Daftar Pengajuan</h2>
            </div>
        </div>

        {{!-- Tabel riwayat pengajuan --}}
        <div class="wrapper-tabel">
            <table class="tabel-riwayat">
                {{!-- Header kolom tabel --}}
                <thead class="kepala-tabel">
                    <tr class="baris-header">
                        <th class="sel-header kolom-jenis-izin">Jenis Izin</th>
                        <th class="sel-header kolom-periode">Periode</th>
                        <th class="sel-header kolom-durasi">Durasi</th>
                        <th class="sel-header kolom-tanggal-pengajuan">Tanggal Pengajuan</th>
                        <th class="sel-header kolom-status">Status</th>
                        <th class="sel-header kolom-aksi">Aksi</th>
                    </tr>
                </thead>

                {{!-- Badan tabel - daftar pengajuan --}}
                <tbody class="badan-tabel">
                    {{#if riwayatPengajuan}}
                        {{#each riwayatPengajuan}}
                            {{!-- Baris tabel untuk setiap pengajuan --}}
                            {{!-- Data attributes untuk modal: alasan, tanggal persetujuan, alasan penolakan --}}
                            <tr class="baris-tabel" data-alasan="{{alasan}}" data-tanggal-persetujuan="{{tanggalPersetujuan}}" data-tanggal-penolakan="{{tanggalPersetujuan}}" data-alasan-penolakan="{{alasanPenolakan}}">
                                {{!-- Kolom Jenis Izin --}}
                                <td class="sel-tabel sel-jenis-izin">
                                    <div class="kontainer-jenis-izin">
                                        <i class="fas {{iconJenisIzin}} ikon-jenis-izin"></i>
                                        <span class="teks-jenis-izin">{{jenisIzin}}</span>
                                    </div>
                                </td>

                                {{!-- Kolom Periode --}}
                                <td class="sel-tabel sel-periode">
                                    <span class="teks-periode">{{periode}}</span>
                                </td>

                                {{!-- Kolom Durasi --}}
                                <td class="sel-tabel sel-durasi">
                                    <span class="teks-durasi">{{durasi}}</span>
                                </td>

                                {{!-- Kolom Tanggal Pengajuan --}}
                                <td class="sel-tabel sel-tanggal-pengajuan">
                                    <span class="teks-tanggal-pengajuan">{{tanggalPengajuan}}</span>
                                </td>

                                {{!-- Kolom Status Pengajuan --}}
                                <td class="sel-tabel sel-status">
                                    {{!-- Badge status dengan warna dinamis berdasarkan status --}}
                                    <div class="lencana-status {{#eq statusPengajuan 'Menunggu Persetujuan'}}lencana-menunggu{{/eq}} {{#eq statusPengajuan 'Disetujui'}}lencana-disetujui{{/eq}} {{#eq statusPengajuan 'Ditolak'}}lencana-ditolak{{/eq}}">
                                        <span class="teks-lencana">{{statusPengajuan}}</span>
                                    </div>
                                </td>

                                {{!-- Kolom Aksi --}}
                                <td class="sel-tabel sel-aksi">
                                    {{!-- Semua pengajuan hanya tampilkan Detail (read-only) --}}
                                    <div class="kelompok-aksi">
                                        <button type="button" class="tombol-aksi tombol-detail" title="Lihat detail pengajuan">
                                            <i class="fas fa-eye ikon-aksi"></i>
                                            <span class="teks-tombol">Detail</span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                    {{else}}
                        {{!-- Pesan ketika tidak ada pengajuan --}}
                        <tr class="baris-tabel">
                            <td colspan="6" style="text-align: center; padding: 40px; color: #999;">
                                <div>
                                    <i class="fas fa-inbox" style="font-size: 48px; color: #ddd; margin-bottom: 16px; display: block;"></i>
                                    <p style="margin: 0; font-size: 16px; color: #666;">Belum ada pengajuan surat izin</p>
                                    <p style="margin: 8px 0 0 0; font-size: 14px; color: #999;">Mulai ajukan surat izin Anda di halaman <a href="/pengajuan/buat" style="color: #4f39f6; text-decoration: none;">Buat Surat Izin</a></p>
                                </div>
                            </td>
                        </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{!-- ==================== MODAL DETAIL PENGAJUAN ==================== --}}
{{!-- 
    Modal untuk menampilkan detail pengajuan surat izin dalam bentuk read-only.
    Mendukung 3 variasi status:
    1. Menunggu Persetujuan - Menampilkan badge kuning + data pengajuan
    2. Disetujui - Menampilkan badge hijau + data pengajuan + tanggal persetujuan
    3. Ditolak - Menampilkan badge merah + data pengajuan + alasan penolakan
--}}
<div class="modal-detail-overlay" id="modalDetailPengajuan">
    {{!-- Kontainer modal --}}
    <div class="modal-dialog">
        {{!-- Header modal dengan judul dan tombol tutup --}}
        <div class="modal-header">
            <h2 class="modal-title">Detail Pengajuan</h2>
            <button type="button" class="tombol-tutup-modal" id="tombolTutupModal" aria-label="Tutup modal">
                <i class="fas fa-times"></i>
            </button>
        </div>

        {{!-- Konten modal --}}
        <div class="modal-konten-detail-pengajuan">
            {{!-- Section: Status Badge --}}
            <div class="bagian-status-modal">
                <div id="badgeStatusModal" class="lencana-status">
                    <span class="teks-lencana" id="teksStatusModal">Menunggu Persetujuan</span>
                </div>
            </div>

            {{!-- Section: Informasi Pengajuan --}}
            <div class="bagian-info-pengajuan">
                {{!-- Jenis Izin --}}
                <div class="item-info-pengajuan">
                    <label class="label-info">Jenis Izin</label>
                    <div class="nilai-info" id="nilaiJenisIzin">-</div>
                </div>

                {{!-- Tanggal Mulai --}}
                <div class="item-info-pengajuan">
                    <label class="label-info">Tanggal Mulai</label>
                    <div class="nilai-info" id="nilaiTanggalMulai">-</div>
                </div>

                {{!-- Tanggal Selesai --}}
                <div class="item-info-pengajuan">
                    <label class="label-info">Tanggal Selesai</label>
                    <div class="nilai-info" id="nilaiTanggalSelesai">-</div>
                </div>

                {{!-- Durasi (Full Width) --}}
                <div class="item-info-pengajuan full-width">
                    <label class="label-info">Durasi</label>
                    <div class="nilai-info" id="nilaiDurasi">-</div>
                </div>

                {{!-- Alasan Pengajuan (Full Width) --}}
                <div class="item-info-pengajuan full-width">
                    <label class="label-info">Alasan Pengajuan</label>
                    <div class="nilai-info nilai-info-alasan" id="nilaiAlasan">-</div>
                </div>

                {{!-- Tanggal Pengajuan (Full Width) --}}
                <div class="item-info-pengajuan full-width">
                    <label class="label-info">Tanggal Pengajuan</label>
                    <div class="nilai-info" id="nilaiTanggalPengajuan">-</div>
                </div>
            </div>

            {{!-- Section: Persetujuan (Hanya untuk status Disetujui) --}}
            <div class="bagian-persetujuan" id="bagianPersetujuan" style="display: none;">
                <div class="kotak-persetujuan">
                    <div class="ikon-persetujuan">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="teks-persetujuan">
                        <p class="label-persetujuan">Disetujui pada:</p>
                        <p class="nilai-persetujuan" id="nilaiTanggalPersetujuan">-</p>
                    </div>
                </div>
            </div>

            {{!-- Section: Penolakan (Hanya untuk status Ditolak) --}}
            <div class="bagian-penolakan" id="bagianPenolakan" style="display: none;">
                <div class="kotak-penolakan">
                    <div class="ikon-penolakan">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <div class="teks-penolakan">
                        <p class="label-penolakan">Ditolak pada:</p>
                        <p class="nilai-penolakan" id="nilaiTanggalPenolakan">-</p>
                    </div>
                </div>

                {{!-- Alasan Penolakan --}}
                <div class="item-info-pengajuan">
                    <label class="label-info">Alasan Penolakan</label>
                    <div class="nilai-info nilai-info-alasan" id="nilaiAlasanPenolakan">-</div>
                </div>
            </div>

            {{!-- Tombol Tutup --}}
            <div class="bagian-aksi-modal">
                <button type="button" class="tombol-tutup-modal-bawah" id="tombolTutupBawah">
                    <i class="fas fa-check"></i>
                    <span>Tutup</span>
                </button>
            </div>
        </div>
    </div>
</div>

{{!-- ==================== SCRIPT LOKAL ==================== --}}
<script>
    {{!-- ====================== FUNGSI MODAL ====================== --}}
    
    /**
     * Fungsi untuk membuka modal detail pengajuan dengan data dari baris tabel
     * @param {HTMLElement} tombolDetail - Tombol detail yang diklik
     */
    function bukaModalDetail(tombolDetail) {
        // Dapatkan baris tabel dari tombol yang diklik
        const barisTabel = tombolDetail.closest('tr.baris-tabel');
        if (!barisTabel) return;

        // DEBUG: Log data attributes
        console.log('ðŸ“‹ Data dari data attributes:', {
            alasan: barisTabel.dataset.alasan,
            tanggalPersetujuan: barisTabel.dataset.tanggalPersetujuan,
            tanggalPenolakan: barisTabel.dataset.tanggalPenolakan,
            alasanPenolakan: barisTabel.dataset.alasanPenolakan
        });

        // Ekstrak data dari kolom-kolom tabel
        const jenisIzin = barisTabel.querySelector('.teks-jenis-izin')?.textContent?.trim() || '-';
        const periode = barisTabel.querySelector('.teks-periode')?.textContent?.trim() || '-';
        const durasi = barisTabel.querySelector('.teks-durasi')?.textContent?.trim() || '-';
        const tanggalPengajuan = barisTabel.querySelector('.teks-tanggal-pengajuan')?.textContent?.trim() || '-';
        const statusPengajuan = barisTabel.querySelector('.teks-lencana')?.textContent?.trim() || '-';

        // DEBUG: Log data ekstraksi
        console.log('ðŸ“Š Data dari table cells:', {
            jenisIzin,
            periode,
            durasi,
            tanggalPengajuan,
            statusPengajuan
        });

        // Ekstrak tanggal mulai dan selesai dari periode (format: "01 Jan 2024 - 05 Jan 2024")
        let tanggalMulai = '-';
        let tanggalSelesai = '-';
        if (periode && periode.includes('-')) {
            const periodeArray = periode.split('-');
            tanggalMulai = periodeArray[0]?.trim() || '-';
            tanggalSelesai = periodeArray[1]?.trim() || '-';
        }

        // Dapatkan elemen-elemen modal
        const modalDetailPengajuan = document.getElementById('modalDetailPengajuan');
        const badgeStatusModal = document.getElementById('badgeStatusModal');
        const teksStatusModal = document.getElementById('teksStatusModal');
        const nilaiJenisIzin = document.getElementById('nilaiJenisIzin');
        const nilaiTanggalMulai = document.getElementById('nilaiTanggalMulai');
        const nilaiTanggalSelesai = document.getElementById('nilaiTanggalSelesai');
        const nilaiDurasi = document.getElementById('nilaiDurasi');
        const nilaiAlasan = document.getElementById('nilaiAlasan');
        const nilaiTanggalPengajuan = document.getElementById('nilaiTanggalPengajuan');
        const bagianPersetujuan = document.getElementById('bagianPersetujuan');
        const bagianPenolakan = document.getElementById('bagianPenolakan');
        const nilaiTanggalPersetujuan = document.getElementById('nilaiTanggalPersetujuan');
        const nilaiTanggalPenolakan = document.getElementById('nilaiTanggalPenolakan');
        const nilaiAlasanPenolakan = document.getElementById('nilaiAlasanPenolakan');

        // Isi data ke modal
        nilaiJenisIzin.textContent = jenisIzin;
        nilaiTanggalMulai.textContent = tanggalMulai;
        nilaiTanggalSelesai.textContent = tanggalSelesai;
        nilaiDurasi.textContent = durasi;
        nilaiTanggalPengajuan.textContent = tanggalPengajuan;
        
        // Set status badge dan warna
        teksStatusModal.textContent = statusPengajuan;
        badgeStatusModal.className = 'lencana-status';
        if (statusPengajuan === 'Menunggu Persetujuan') {
            badgeStatusModal.classList.add('lencana-menunggu');
            nilaiAlasan.textContent = barisTabel.dataset.alasan || '-';
        } else if (statusPengajuan === 'Disetujui') {
            badgeStatusModal.classList.add('lencana-disetujui');
            nilaiAlasan.textContent = barisTabel.dataset.alasan || '-';
            nilaiTanggalPersetujuan.textContent = barisTabel.dataset.tanggalPersetujuan || '-';
            bagianPersetujuan.style.display = 'block';
            bagianPenolakan.style.display = 'none';
        } else if (statusPengajuan === 'Ditolak') {
            badgeStatusModal.classList.add('lencana-ditolak');
            nilaiAlasan.textContent = barisTabel.dataset.alasan || '-';
            nilaiTanggalPenolakan.textContent = barisTabel.dataset.tanggalPenolakan || '-';
            nilaiAlasanPenolakan.textContent = barisTabel.dataset.alasanPenolakan || '-';
            bagianPersetujuan.style.display = 'none';
            bagianPenolakan.style.display = 'block';
        } else {
            nilaiAlasan.textContent = barisTabel.dataset.alasan || '-';
            bagianPersetujuan.style.display = 'none';
            bagianPenolakan.style.display = 'none';
        }

        // Tampilkan modal
        modalDetailPengajuan.classList.add('modal-aktif');
        console.log('âœ… Modal dibuka dengan data:', {
            jenisIzin, periode, durasi, tanggalPengajuan, statusPengajuan
        });
    }

    /**
     * Fungsi untuk menutup modal detail pengajuan
     */
    function tutupModalDetail() {
        const modalDetailPengajuan = document.getElementById('modalDetailPengajuan');
        modalDetailPengajuan.classList.remove('modal-aktif');
    }

    /**
     * Event listener untuk tombol detail pada setiap baris tabel
     */
    document.querySelectorAll('.tombol-detail').forEach(function(tombol) {
        tombol.addEventListener('click', function() {
            bukaModalDetail(tombol);
        });
    });

    /**
     * Event listener untuk tombol tutup modal (header)
     */
    document.getElementById('tombolTutupModal').addEventListener('click', function() {
        tutupModalDetail();
    });

    /**
     * Event listener untuk tombol tutup modal (bawah)
     */
    document.getElementById('tombolTutupBawah').addEventListener('click', function() {
        tutupModalDetail();
    });

    /**
     * Event listener untuk tutup modal saat klik di luar (overlay)
     */
    document.getElementById('modalDetailPengajuan').addEventListener('click', function(event) {
        // Jika klik langsung di overlay (bukan di modal dialog)
        if (event.target === this) {
            tutupModalDetail();
        }
    });
</script>

