<!-- ==================== HALAMAN RIWAYAT PENGAJUAN KARYAWAN ==================== -->
<!-- Halaman untuk karyawan melihat riwayat pengajuan dan status persetujuan -->

<!-- Header halaman pengajuan -->
<div class="pengajuan-header">
    <div class="pengajuan-info">
        <h1 class="pengajuan-title">Riwayat Pengajuan</h1>
        <p class="pengajuan-subtitle">Kelola dan pantau status pengajuan izin Anda</p>
    </div>
    <a href="/pengajuan/buat" class="btn-buat-pengajuan">
        <i class="fas fa-plus"></i> Buat Pengajuan Baru
    </a>
</div>

<!-- Bagian daftar pengajuan -->
<div class="pengajuan-container">
    {{#if riwayatPengajuan}}
        <!-- Loop untuk setiap pengajuan -->
        {{#each riwayatPengajuan}}
        <div class="kartu-pengajuan">
            <div class="pengajuan-header-card">
                <div class="pengajuan-info-card">
                    <h3 class="pengajuan-jenis">{{jenisIzin}}</h3>
                    <p class="pengajuan-periode">
                        <i class="fas fa-calendar"></i> 
                        {{tanggalMulai}} s.d. {{tanggalSelesai}} ({{jumlahHari}} hari)
                    </p>
                </div>
                <div class="pengajuan-status-card">
                    {{#if (eq status 'disetujui')}}
                        <span class="status-badge status-disetujui">
                            <i class="fas fa-check-circle"></i> Disetujui
                        </span>
                    {{else if (eq status 'menunggu')}}
                        <span class="status-badge status-menunggu">
                            <i class="fas fa-hourglass-half"></i> Menunggu
                        </span>
                    {{else if (eq status 'ditolak')}}
                        <span class="status-badge status-ditolak">
                            <i class="fas fa-times-circle"></i> Ditolak
                        </span>
                    {{/if}}
                </div>
            </div>

            <div class="pengajuan-body-card">
                <div class="pengajuan-detail">
                    <p class="detail-label"><strong>Alasan:</strong></p>
                    <p class="detail-value">{{alasan}}</p>
                </div>

                {{#if catatanPenolakan}}
                <div class="pengajuan-catatan">
                    <p class="catatan-label"><strong>Catatan Penolakan:</strong></p>
                    <p class="catatan-value">{{catatanPenolakan}}</p>
                </div>
                {{/if}}
            </div>

            <div class="pengajuan-footer-card">
                <p class="tanggal-submit">
                    <i class="fas fa-clock"></i> Diajukan: {{tanggalSubmit}}
                </p>
                <a href="/pengajuan/{{idPengajuan}}" class="tombol-lihat-detail">
                    <i class="fas fa-eye"></i> Lihat Detail
                </a>
            </div>
        </div>
        {{/each}}

    {{else}}
        <!-- Pesan jika tidak ada pengajuan -->
        <div class="pesan-kosong-pengajuan">
            <div class="ikon-kosong-pengajuan">
                <i class="fas fa-file-alt"></i>
            </div>
            <p class="teks-kosong-pengajuan">Belum ada pengajuan. Silakan buat pengajuan baru untuk memulai.</p>
            <a href="/pengajuan/buat" class="tombol-buat-pertama">
                <i class="fas fa-plus"></i> Buat Pengajuan Pertama
            </a>
        </div>
    {{/if}}
</div>

