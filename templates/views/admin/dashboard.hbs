<!-- ==================== GRID MANAJEMEN ==================== -->
<!-- Tombol akses fitur manajemen utama -->
<div class="management-grid">
    <!-- Kartu Manajemen Karyawan -->
    <div class="management-card">
        <div class="card-header">
            <i class="fas fa-users"></i>
            <h3>Manajemen Karyawan</h3>
        </div>
        <p class="card-description">Tambah, edit, atau hapus akun karyawan dari sistem</p>
        <button class="btn btn-primary">Kelola Karyawan</button>
    </div>

    <!-- Kartu Manajemen Penanggung Jawab -->
    <div class="management-card">
        <div class="card-header">
            <i class="fas fa-shield-alt"></i>
            <h3>Manajemen Penanggung Jawab</h3>
        </div>
        <p class="card-description">Tambah atau ubah akun penanggung jawab kehadiran</p>
        <button class="btn btn-primary">Kelola Penanggung Jawab</button>
    </div>
</div>
