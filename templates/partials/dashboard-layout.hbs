<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} | NusaAttend</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="dashboard-layout">
    <!-- ==================== SIDEBAR NAVIGASI ==================== -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <i class="fas fa-building"></i>
            </div>
            <h1 class="sidebar-title">NusaAttend</h1>
        </div>

        <!-- Informasi Pengguna di Sidebar -->
        <div class="sidebar-user-info">
            <p class="user-role-title">{{user.role}}</p>
            <p class="user-role-label">{{#if (eq user.role 'admin')}}Administrator Sistem{{else if (eq user.role 'penanggung-jawab')}}Penanggung Jawab{{else}}Karyawan{{/if}}</p>
            <span class="user-role-badge">
                {{#if (eq user.role 'admin')}}Admin Sistem{{else if (eq user.role 'penanggung-jawab')}}Penanggung Jawab{{else}}Karyawan{{/if}}
            </span>
        </div>

        <!-- Menu Navigasi - Berbeda Sesuai Role Pengguna -->
        <nav class="sidebar-menu">
            {{#if (eq user.role 'admin')}}
                <!-- Menu untuk Admin -->
                <a href="/dashboard" class="menu-item {{isActive 'dashboard' halaman}}">
                    <i class="fas fa-th"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/karyawan" class="menu-item {{isActive 'karyawan' halaman}}">
                    <i class="fas fa-users"></i>
                    <span>Manajemen Karyawan</span>
                </a>
                <a href="/admin/penanggung-jawab" class="menu-item {{isActive 'supervisor' halaman}}">
                    <i class="fas fa-user-tie"></i>
                    <span>Manajemen Penanggung Jawab</span>
                </a>
                <a href="/admin/log-keberatan" class="menu-item {{isActive 'log-keberatan' halaman}}">
                    <i class="fas fa-shield-alt"></i>
                    <span>Log Keberatan</span>
                </a>
            {{else if (eq user.role 'penanggung-jawab')}}
                <!-- Menu untuk Penanggung Jawab -->
                <!-- Didasarkan pada Figma Design: node-id 4:6728 -->
                <a href="/dashboard" class="menu-item {{isActive 'dashboard' halaman}}">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/pengajuan" class="menu-item {{isActive 'pengajuan' halaman}}">
                    <i class="fas fa-file-invoice"></i>
                    <span>Review Pengajuan</span>
                </a>
                <a href="/keberatan" class="menu-item {{isActive 'keberatan' halaman}}">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>Tinjauan Keberatan</span>
                    {{#if totalKeberatan}}<span class="badge badge-alert">{{totalKeberatan}}</span>{{/if}}
                </a>
                <a href="/rekap-kehadiran" class="menu-item {{isActive 'rekap-kehadiran' halaman}}">
                    <i class="fas fa-users"></i>
                    <span>Rekap Kehadiran</span>
                </a>
            {{else}}
                <!-- Menu untuk Karyawan -->
                <a href="/dashboard" class="menu-item {{isActive 'dashboard' halaman}}">
                    <i class="fas fa-th"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/pengajuan/buat" class="menu-item {{isActive 'buat-pengajuan' halaman}}">
                    <i class="fas fa-plus-circle"></i>
                    <span>Buat Pengajuan</span>
                </a>
                <a href="/pengajuan" class="menu-item {{isActive 'riwayat-pengajuan' halaman}}">
                    <i class="fas fa-history"></i>
                    <span>Riwayat Pengajuan</span>
                </a>
                <a href="/absensi" class="menu-item {{isActive 'absensi' halaman}}">
                    <i class="fas fa-clock"></i>
                    <span>Absensi</span>
                </a>
            {{/if}}
        </nav>

        <!-- Tombol Logout di Footer Sidebar -->
        <div class="sidebar-footer">
            <!-- Tombol logout yang trigger modal konfirmasi -->
            <button type="button" class="logout-btn" id="tombolKeluarDashboard" title="Keluar dari Akun">
                <i class="fas fa-sign-out-alt"></i>
                <span>Keluar</span>
            </button>
        </div>
    </aside>

    <!-- ==================== MODAL KONFIRMASI LOGOUT ==================== -->
    <!-- Modal pop-up untuk konfirmasi sebelum logout -->
    <div class="lapisanOverlayLogout" id="lapisanOverlayLogout">
        <div class="modalKonfirmasiLogout">
            <!-- Header modal dengan icon warning -->
            <div class="headerModalLogout">
                <div class="iconWarningLogout">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
            </div>

            <!-- Content modal -->
            <div class="contentModalLogout">
                <h2 class="judulModalLogout">Konfirmasi Logout</h2>
                <p class="deskripsiModalLogout">Apakah Anda yakin ingin keluar dari Akun?</p>
            </div>

            <!-- Footer modal dengan tombol aksi -->
            <div class="footerModalLogout">
                <!-- Tombol Batal -->
                <button type="button" class="tombolBatalLogout" id="tombolBatalLogout">
                    Batal
                </button>

                <!-- Form logout yang akan disubmit -->
                <form method="POST" action="/logout" id="formLogout" style="display: none;">
                </form>

                <!-- Tombol Keluar -->
                <button type="button" class="tombolKonfirmasiLogout" id="tombolKonfirmasiLogout">
                    Keluar
                </button>
            </div>
        </div>
    </div>

    <!-- ==================== KONTEN UTAMA ==================== -->
    <main class="main-content">
        {{{body}}}
        {{>footer}}
    </main>

    <!-- ==================== SCRIPT EKSTERNAL ==================== -->
    <script src="/js/app.js"></script>
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script src="/js/socket-client.js"></script>
</body>
</html>
