<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} | NusaAttend</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="dashboard-layout">
    <!-- ==================== SIDEBAR NAVIGASI ==================== -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <i class="fas fa-building"></i>
            </div>
            <h1 class="sidebar-title">NusaAttend</h1>
        </div>

        <!-- Informasi Pengguna di Sidebar -->
        <div class="sidebar-user">
            <p class="user-role">{{user.role}}</p>
            <p class="user-name">{{user.nama_lengkap}}</p>
        </div>

        <!-- Menu Navigasi - Berbeda Sesuai Role Pengguna -->
        <nav class="sidebar-menu">
            {{#if (eq user.role 'admin')}}
                <!-- Menu untuk Admin -->
                <a href="/dashboard" class="menu-item {{#if (isActive 'dashboard')}}active{{/if}}">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/pengajuan" class="menu-item {{#if (isActive 'pengajuan')}}active{{/if}}">
                    <i class="fas fa-file-alt"></i>
                    <span>Manajemen Pengajuan</span>
                </a>
                <a href="/admin/karyawan" class="menu-item {{#if (isActive 'karyawan')}}active{{/if}}">
                    <i class="fas fa-users"></i>
                    <span>Manajemen Karyawan</span>
                </a>
                <a href="/admin/laporan" class="menu-item {{#if (isActive 'laporan')}}active{{/if}}">
                    <i class="fas fa-chart-bar"></i>
                    <span>Laporan</span>
                </a>
            {{else if (eq user.role 'supervisor')}}
                <!-- Menu untuk Supervisor -->
                <a href="/dashboard" class="menu-item {{#if (isActive 'dashboard')}}active{{/if}}">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/supervisor/pengajuan" class="menu-item {{#if (isActive 'pengajuan')}}active{{/if}}">
                    <i class="fas fa-check-circle"></i>
                    <span>Review Pengajuan</span>
                </a>
                <a href="/supervisor/laporan" class="menu-item {{#if (isActive 'laporan')}}active{{/if}}">
                    <i class="fas fa-chart-bar"></i>
                    <span>Laporan Tim</span>
                </a>
            {{else}}
                <!-- Menu untuk Karyawan -->
                <a href="/dashboard" class="menu-item {{#if (isActive 'dashboard')}}active{{/if}}">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/pengajuan/buat" class="menu-item {{#if (isActive 'buat-pengajuan')}}active{{/if}}">
                    <i class="fas fa-plus-circle"></i>
                    <span>Buat Pengajuan</span>
                </a>
                <a href="/pengajuan" class="menu-item {{#if (isActive 'riwayat-pengajuan')}}active{{/if}}">
                    <i class="fas fa-history"></i>
                    <span>Riwayat Pengajuan</span>
                </a>
                <a href="/absensi" class="menu-item {{#if (isActive 'absensi')}}active{{/if}}">
                    <i class="fas fa-clock"></i>
                    <span>Absensi</span>
                </a>
            {{/if}}

            <!-- Menu Chatbot - Tersedia untuk Semua Role -->
            <a href="/chatbot" class="menu-item {{#if (isActive 'chatbot')}}active{{/if}}">
                <i class="fas fa-comments"></i>
                <span>Bantuan Chatbot</span>
            </a>
        </nav>

        <!-- Tombol Logout di Footer Sidebar -->
        <div class="sidebar-footer">
            <form method="POST" action="/logout">
                <button type="submit" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Keluar</span>
                </button>
            </form>
        </div>
    </aside>

    <!-- ==================== KONTEN UTAMA ==================== -->
    <main class="main-content">
        {{{body}}}
        {{>footer}}
    </main>

    <!-- ==================== SCRIPT EKSTERNAL ==================== -->
    <script src="/js/app.js"></script>
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script src="/js/socket-client.js"></script>
</body>
</html>
