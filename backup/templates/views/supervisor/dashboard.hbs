<!DOCTYPE html>
<html lang="id">
  {{>head}}
  <body>
    {{>header}}
    
    <main class="container py-5">
      <h1 class="mb-4">
        <i class="fas fa-tasks"></i> Dashboard Penanggung Jawab
      </h1>

      <!-- Alert Section -->
      <div id="notification-container"></div>

      <!-- Quick Stats -->
      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-hourglass-half fa-2x text-warning mb-2"></i>
              <h6 class="card-title">Menunggu Review</h6>
              <p class="display-6">{{stats.menunggu}}</p>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
              <h6 class="card-title">Telah Disetujui</h6>
              <p class="display-6">{{stats.disetujui}}</p>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-times-circle fa-2x text-danger mb-2"></i>
              <h6 class="card-title">Telah Ditolak</h6>
              <p class="display-6">{{stats.ditolak}}</p>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-file-alt fa-2x text-info mb-2"></i>
              <h6 class="card-title">Total Pengajuan</h6>
              <p class="display-6">{{stats.total}}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Pengajuan yang Perlu Review -->
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">
            <i class="fas fa-inbox"></i> Pengajuan yang Perlu Review
          </h5>
        </div>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th>Nama Karyawan</th>
                <th>Jenis Pengajuan</th>
                <th>Tanggal Mulai</th>
                <th>Tanggal Selesai</th>
                <th>Status</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              {{#if pengajuan_menunggu}}
                {{#each pengajuan_menunggu}}
                  <tr>
                    <td>{{this.karyawan_nama}}</td>
                    <td>
                      <i class="fas fa-file-alt"></i> 
                      {{capitalize this.jenis_pengajuan}}
                    </td>
                    <td>{{format_date this.tanggal_mulai}}</td>
                    <td>{{format_date this.tanggal_selesai}}</td>
                    <td>
                      <span class="badge bg-warning">
                        <i class="fas fa-hourglass-half"></i> Menunggu
                      </span>
                    </td>
                    <td>
                      <a href="/supervisor/pengajuan/{{this._id}}" class="btn btn-sm btn-primary">
                        <i class="fas fa-eye"></i> Review
                      </a>
                    </td>
                  </tr>
                {{/each}}
              {{else}}
                <tr>
                  <td colspan="6" class="text-center text-muted py-4">
                    Tidak ada pengajuan yang perlu direview
                  </td>
                </tr>
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
    </main>

    {{>footer}}

    <script>
      const socket = io('/socket');

      socket.on('pengajuan_baru_notifikasi', function(data) {
        showNotification('Ada pengajuan baru yang perlu direview', 'warning');
        setTimeout(() => location.reload(), 2000);
      });

      function showNotification(message, type) {
        const container = document.getElementById('notification-container');
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
        alertDiv.innerHTML = `
          <i class="fas fa-bell"></i> ${message}
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        container.appendChild(alertDiv);
        setTimeout(() => alertDiv.remove(), 5000);
      }
    </script>
  </body>
</html>
