<!DOCTYPE html>
<html lang="id">
  {{>head}}
  <body>
    {{>header}}
    
    <main class="container py-5">
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <h1 class="mb-4">
            <i class="fas fa-file-alt"></i> Riwayat Pengajuan
          </h1>

          {{#if pengajuan}}
            {{#each pengajuan}}
              <div class="card mb-3 shadow-sm">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-8">
                      <h5 class="card-title">
                        {{capitalize this.jenis_pengajuan}}
                      </h5>
                      <p class="card-text text-muted">
                        <strong>Periode:</strong> {{format_date this.tanggal_mulai}} - {{format_date this.tanggal_selesai}} ({{this.jumlah_hari}} hari)
                      </p>
                      <p class="card-text">
                        <strong>Alasan:</strong> {{this.alasan}}
                      </p>
                      {{#if this.catatan_penolakan}}
                        <p class="card-text">
                          <strong>Catatan:</strong> {{this.catatan_penolakan}}
                        </p>
                      {{/if}}
                    </div>
                    <div class="col-md-4 text-md-end">
                      {{#if (eq this.status "disetujui")}}
                        <span class="badge bg-success mb-3 d-inline-block" style="font-size: 14px; padding: 8px 12px;">
                          <i class="fas fa-check-circle"></i> Disetujui
                        </span>
                      {{else if (eq this.status "menunggu_persetujuan")}}
                        <span class="badge bg-warning mb-3 d-inline-block" style="font-size: 14px; padding: 8px 12px;">
                          <i class="fas fa-hourglass-half"></i> Menunggu Persetujuan
                        </span>
                      {{else}}
                        <span class="badge bg-danger mb-3 d-inline-block" style="font-size: 14px; padding: 8px 12px;">
                          <i class="fas fa-times-circle"></i> Ditolak
                        </span>
                      {{/if}}
                      <br>
                      <a href="/pengajuan/{{this._id}}" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> Detail
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          {{else}}
            <div class="alert alert-info">
              <i class="fas fa-info-circle"></i> Belum ada pengajuan. 
              <a href="/pengajuan/buat">Buat pengajuan baru</a>
            </div>
          {{/if}}
        </div>
      </div>
    </main>

    {{>footer}}
  </body>
</html>
