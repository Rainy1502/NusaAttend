<!DOCTYPE html>
<html lang="id">
  {{>head}}
  <body>
    {{>header}}
    
    <main class="container py-5">
      <h1 class="mb-4">
        <i class="fas fa-home"></i> Dashboard Karyawan
      </h1>

      <!-- Alert Section -->
      <div id="notification-container"></div>

      <!-- Welcome Card -->
      <div class="card mb-4 border-0 shadow-sm bg-light">
        <div class="card-body">
          <h5 class="card-title">
            <i class="fas fa-wave-hand"></i> Selamat datang, {{user.nama_lengkap}}!
          </h5>
          <p class="card-text text-muted">
            Jabatan: <strong>{{user.jabatan}}</strong> | 
            Sisa Cuti: <strong>{{user.sisa_cuti}} hari</strong>
          </p>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-file-alt fa-2x text-primary mb-2"></i>
              <h6 class="card-title">Pengajuan Disetujui</h6>
              <p class="display-6">{{stats.disetujui}}</p>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-hourglass-half fa-2x text-warning mb-2"></i>
              <h6 class="card-title">Menunggu Review</h6>
              <p class="display-6">{{stats.menunggu}}</p>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-times-circle fa-2x text-danger mb-2"></i>
              <h6 class="card-title">Pengajuan Ditolak</h6>
              <p class="display-6">{{stats.ditolak}}</p>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-calendar fa-2x text-success mb-2"></i>
              <h6 class="card-title">Sisa Cuti</h6>
              <p class="display-6">{{user.sisa_cuti}}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <a href="/pengajuan/buat" class="btn btn-primary w-100 py-3">
            <i class="fas fa-plus-circle"></i> Buat Surat Izin
          </a>
        </div>
        <div class="col-md-6">
          <a href="/absensi" class="btn btn-success w-100 py-3">
            <i class="fas fa-clock"></i> Absen Sekarang
          </a>
        </div>
      </div>

      <!-- Recent Pengajuan -->
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">
            <i class="fas fa-history"></i> Pengajuan Terakhir
          </h5>
        </div>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th>Jenis Pengajuan</th>
                <th>Tanggal Mulai</th>
                <th>Tanggal Selesai</th>
                <th>Status</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              {{#if pengajuan}}
                {{#each pengajuan}}
                  <tr>
                    <td>
                      <i class="fas fa-file-alt"></i> 
                      {{capitalize this.jenis_pengajuan}}
                    </td>
                    <td>{{format_date this.tanggal_mulai}}</td>
                    <td>{{format_date this.tanggal_selesai}}</td>
                    <td>
                      {{#if (eq this.status "disetujui")}}
                        <span class="badge bg-success">
                          <i class="fas fa-check"></i> Disetujui
                        </span>
                      {{else if (eq this.status "menunggu_persetujuan")}}
                        <span class="badge bg-warning">
                          <i class="fas fa-hourglass-half"></i> Menunggu
                        </span>
                      {{else}}
                        <span class="badge bg-danger">
                          <i class="fas fa-times"></i> Ditolak
                        </span>
                      {{/if}}
                    </td>
                    <td>
                      <a href="/pengajuan/{{this._id}}" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> Lihat
                      </a>
                    </td>
                  </tr>
                {{/each}}
              {{else}}
                <tr>
                  <td colspan="5" class="text-center text-muted py-4">
                    Belum ada pengajuan. <a href="/pengajuan/buat">Buat pengajuan sekarang</a>
                  </td>
                </tr>
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
    </main>

    {{>footer}}

    <script>
      // Real-time socket listener
      const socket = io('/socket');

      socket.on('pengajuan_baru_notifikasi', function(data) {
        showNotification('Pengajuan baru diterima', 'success');
      });

      socket.on('status_pengajuan_diubah_notifikasi', function(data) {
        showNotification('Status pengajuan Anda berubah: ' + data.status, 'info');
        setTimeout(() => location.reload(), 2000);
      });

      function showNotification(message, type) {
        const container = document.getElementById('notification-container');
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
        alertDiv.innerHTML = `
          <i class="fas fa-bell"></i> ${message}
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        container.appendChild(alertDiv);
        setTimeout(() => alertDiv.remove(), 5000);
      }
    </script>
  </body>
</html>
